@model project_clinic.Models.ViewModel.DoctorAndPersonViewModel

@{
    ViewData["Title"] = "حذف طبيب";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-danger">
                <i class="fas fa-user-times me-2"></i> @ViewData["Title"]
            </h2>
            <div class="alert alert-warning mt-3">
                <h5 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i>هل أنت متأكد من رغبتك في الحذف؟
                </h5>
                <p class="mb-0">سيتم حذف جميع البيانات المرتبطة بهذا الطبيب ولا يمكن استرجاعها لاحقاً.</p>
            </div>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>تفاصيل الطبيب
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">التخصص</label>
                            <div class="form-control-plaintext">@Html.DisplayFor(model => model.Specialization)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">رقم الطبيب</label>
                            <div class="form-control-plaintext">@Html.DisplayFor(model => model.PersonId)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">الاسم</label>
                            <div class="form-control-plaintext">@Html.DisplayFor(model => model.Name)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">تاريخ الميلاد</label>
                            <div class="form-control-plaintext">@Html.DisplayFor(model => model.DateOfBirth)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">الجنس</label>
                            <div class="form-control-plaintext">@Html.DisplayFor(model => model.Gender)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">رقم الهاتف</label>
                            <div class="form-control-plaintext">@Html.DisplayFor(model => model.PhoneNumber)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">البريد الإلكتروني</label>
                            <div class="form-control-plaintext">@Html.DisplayFor(model => model.Email)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">العنوان</label>
                            <div class="form-control-plaintext">@Html.DisplayFor(model => model.Address)</div>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-2"></i> تأكيد الحذف
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-times me-2"></i> إلغاء والعودة
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>