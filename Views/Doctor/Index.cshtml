@model IEnumerable<project_clinic.Models.Doctor>

@{
    ViewData["Title"] = "إدارة الأطباء";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-user-md me-2"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> طبيب جديد
        </a>
    </div>

    <div class="card border-0 shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light-primary">
                        <tr>
                            <th class="ps-4">التخصص</th>
                            <th>الاسم</th>
                            <th>الهاتف</th>
                            <th>البريد</th>
                            <th>تاريخ الميلاد</th>
                            <th class="text-end pe-4">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@Html.DisplayFor(modelItem => item.Specialization)</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="ms-3">
                                            <p class="fw-bold mb-0">@Html.DisplayFor(modelItem => item.Person.Name)</p>
                                            <p class="text-muted mb-0 small">ID: @Html.DisplayFor(modelItem => item.Person.PersonId)</p>
                                        </div>
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Person.PhoneNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.Person.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Person.DateOfBirth)</td>
                                <td class="text-end pe-4">
                                    <div class="d-inline-flex">
                                        <a asp-action="Edit" asp-route-id="@item.DoctorId" asp-route-PersonId="@item.Person.PersonId"
                                           class="btn btn-sm btn-icon btn-outline-primary me-2">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.DoctorId" asp-route-PersonId="@item.Person.PersonId"
                                           class="btn btn-sm btn-icon btn-outline-success me-2">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.DoctorId" asp-route-PersonId="@item.Person.PersonId"
                                           class="btn btn-sm btn-icon btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-light-primary {
        background-color: #e6f2ff;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-icon {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 10px;
    }
</style>