@model IEnumerable<project_clinic.Models.MedicalRecord>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.MedicalRecordId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalNotes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicalRecordId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdditionalNotes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MedicalRecordId"   class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MedicalRecordId"class="btn btn-warning">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MedicalRecordId" class="btn btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
