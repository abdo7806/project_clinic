@model IEnumerable<project_clinic.Models.ViewModel.PatientAndPersonViewModel>

@{
    ViewData["Title"] = "قائمة المرضى";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            إضافة مريض جديد
        </a>
    </div>

    <!-- جدول المرضى - نفس المنطق تماما -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="bg-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.PersonId)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                    <th>@Html.DisplayNameFor(model => model.Gender)</th>
                    <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.PersonId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>
                            <!-- نفس الروابط والأكواد البرمجية تماما -->
                            <a asp-action="Edit" asp-route-id="@item.Id" asp-route-PersonId="@item.PersonId" class="btn btn-sm btn-outline-primary">تعديل</a>
                            <a asp-action="Details" asp-route-id="@item.Id" asp-route-PersonId="@item.PersonId" class="btn btn-sm btn-outline-secondary">تفاصيل</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" asp-route-PersonId="@item.PersonId" class="btn btn-sm btn-outline-danger">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- الترقيم الصفحي - نفس المنطق تماما بدون تغيير -->
    <div class="mt-3">
        @{
            if (Model.ToList().Count < 10)
            {
                <a asp-action="Index" asp-route-id="0" class="btn btn-outline-secondary">الصفحة الأولى</a>
            }
            else
            {
                <a asp-action="Index" asp-route-id="@Model.ToList().Last().Id" class="btn btn-outline-primary">التالي</a>
            }
        }
    </div>
</div>

<style>
    /* إضافة أنماط التنسيق فقط */
    .table {
        font-size: 14px;
    }

        .table th {
            background-color: #f8f9fa;
            padding: 12px 8px;
        }

        .table td {
            padding: 10px 8px;
            vertical-align: middle;
        }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        margin: 2px;
    }
</style>