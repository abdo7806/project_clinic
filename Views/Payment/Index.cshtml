@model IEnumerable<project_clinic.Models.Payment>

@{
    ViewData["Title"] = "Payments";
}

<div class="container mt-3">
    <h2 class="mb-3">Payment Records</h2>

    <p class="mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Payment
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PaymentId)</th>
                    <th>@Html.DisplayNameFor(model => model.PaymentDate)</th>
                    <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
                    <th>@Html.DisplayNameFor(model => model.AmountPaid)</th>
                    <th>@Html.DisplayNameFor(model => model.AdditionalNotes)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PaymentId)</td>
                        <td>@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                        <td>@Html.DisplayFor(modelItem => item.AmountPaid)</td>
                        <td>@Html.DisplayFor(modelItem => item.AdditionalNotes)</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>