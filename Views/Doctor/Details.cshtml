@model project_clinic.Models.ViewModel.DoctorAndPersonViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">
                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
            </h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i>Warning!
                </h5>
                <p>Are you sure you want to delete this doctor record?</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Specialization</dt>
                        <dd class="col-sm-8">@Model.Specialization</dd>

                        <dt class="col-sm-4">Doctor ID</dt>
                        <dd class="col-sm-8">@Model.PersonId</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@Model.DateOfBirth</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="fas fa-trash-alt me-1"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>